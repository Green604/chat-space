.user-name
  .user-name__top-items
    %p.user-name__top-items__name
      = current_user.name  
    %ul.user-name__top-items__icon
      %li.user-name__top-item__icon-edit
        = link_to new_group_path do  
          = icon('fa', 'edit')
      %li.user-name__top-item__icon-group
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

.groups
  - current_user.groups.each do |group|
    .groups__group
      = link_to group_messages_path(group) do
        .group-name
          = group.name
        .group-message
          = group.show_last_message